<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:p4="http://xamarin.com/mono/android/designer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main"
    tools:gridSpec="1|8|#000000ff|K:#ee8700ff:16,l:72,l:16,r|S:#83ee00ff:16,0,l:16,56,l:16,0,r">

    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout1">
        <Button
            android:text="Kroki"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:id="@+id/button1"
            android:layout_marginBottom="0.0dp" />
        <Button
            android:text="treningi w tym tyghodniu"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:id="@+id/button2"
            android:layout_marginBottom="0.0dp" />
        <Button
            android:text="pogoda"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:id="@+id/button3"
            android:layout_marginBottom="0.0dp" />
        <Button
            android:text="najdluzszy dystans"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:id="@+id/button4" />
        <Button
            android:text="mapa"
            android:layout_width="match_parent"
            android:layout_height="135.dp"
            android:id="@+id/button5"
            android:layout_marginBottom="0.0dp"
